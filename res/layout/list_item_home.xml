<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item_home"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#FC2E60" >

    <ImageView
        android:id="@+id/image_status_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_medium"
        android:adjustViewBounds="true"
        android:contentDescription="T/F"
        android:maxWidth="20dp"
        android:src="@android:drawable/btn_star" />

    <ImageView
        android:id="@+id/image_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/image_status_favorite"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/text_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/image_status_favorite"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/image_product"
        android:text="Nama Product Yang Sangat Panjang"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/text_product_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_product_price"
        android:layout_below="@+id/image_product"
        android:text="automotif"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/text_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_product_name"
        android:layout_alignTop="@+id/image_status_favorite"
        android:text="Rp 45 000,"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/text_product_stock_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_product_price"
        android:layout_alignBottom="@+id/text_product_price"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_toRightOf="@+id/text_product_price"
        android:text="140 Kotak - 20 Mei 2014"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageButton
        android:id="@+id/btn_more_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@android:drawable/ic_menu_more" />

</RelativeLayout>
